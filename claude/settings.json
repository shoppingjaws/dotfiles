      "Bash(terraform version:*)",
      "Bash(terraform init:*)",
      "Bash(cdr)",
      "Bash(echo $SHOPPINGJAWS_TASK_URLS)",
      "Bash(gh workflow view:*)",
      "Bash(gh workflow list:*)",
      "Bash(git status:*)",
