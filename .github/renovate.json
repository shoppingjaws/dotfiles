{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "managerFilePatterns": [
    "mise/config.toml",
    "package.json"
  ],
  "timezone": "Asia/Tokyo",
  "major": {
    "automerge": false
  },
  "minimumReleaseAge": "14 days",
  "packageRules": [
    {
      "description": "Auto-merge mise updates after 7 days",
      "matchFileNames": ["mise/config.toml"],
      "matchCurrentAge": "7days",
      "automerge": true
    }
  ],
  "extends": ["schedule:automergeDaily", ":dependencyDashboard"],
  "ignoreDeps": [
    "kzdiff",
    "opencommit",
    "ccusage",
    "awslabs.aws-documentation-mcp-server",
    "awslabs.aws-pricing-mcp-server"
  ]
}