{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Asia/Tokyo",
  "major": {
    "automerge": false
  },
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  },
  "minimumReleaseAge": "14 days",
  "packageRules": [
    {
      "description": "Auto-merge mise updates after 7 days",
      "matchFileNames": ["mise/config.toml"],
      "matchCurrentAge": "7 days",
      "automerge": true
    },
    {
      "description": "Auto-merge node updates",
      "matchDatasources": ["package.json"],
      "automerge": true,
      "matchCurrentAge": "7 days"
    }
  ],
  "extends": ["schedule:automergeDaily", ":dependencyDashboard"],
  "ignoreDeps": [
    "aqua:slack.com/slack-cli"
  ]
}